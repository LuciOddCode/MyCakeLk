<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageCakesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Cake Details"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_cake_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cake Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_cake_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cake Price (e.g., 100.99)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_cake_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Cake Description"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_cake_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cake Image"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/iv_cake_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_launcher_background" />

        <Spinner
            android:id="@+id/sp_cake_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:prompt="Select Category" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_cake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Add Cake" />

            <Button
                android:id="@+id/btn_update_cake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:padding="10dp"
                android:text="Update Cake" />

            <Button
                android:id="@+id/btn_delete_cake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:padding="10dp"
                android:text="Delete Cake" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>