<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_manage_cake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageCakesFragment"
    android:padding="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Cakes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/et_cake_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cake Name"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_cake_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cake Price (e.g., 100.99)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_cake_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Cake Description"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/et_cake_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/iv_cake_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_launcher_background" />

        <Spinner
            android:id="@+id/sp_cake_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_cake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Cake"
                android:layout_marginEnd="8dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_update_cake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Cake"
                android:layout_marginEnd="8dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_delete_cake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Cake"
                android:padding="10dp" />

        </LinearLayout>
        <ListView
            android:id="@+id/lv_cakes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>
    </ScrollView>
</FrameLayout>
